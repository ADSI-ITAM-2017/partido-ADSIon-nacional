        <div class="container" style="width: 90%;">
        	 <div class="row">
        	 	<div class="box">
        	 		<div class="col-lg-12">
        	 			<div class="row">
        	 			<hr>
        	 				<h1 class="intro-text text-center">
        	 					<strong> Crea tu perfil </strong>
        	 				</h1>
        	 			<hr>
        	 			</div>
        	 			<div class="row">
	        	 			<%= form_for @usuario, url: {action: "create"}, html: {:class => "nifty_form"} do |f| %> 
	        	 				<div class="col-md-1 col-md-offset-1">
			                        <a class="btn btn-large btn-info" href="#" style="height: 150px; width: 150px;"> <!-- href tiene que abrir la ventana para seleccionar una imagen -->
			                        <i class="fa fa-camera" aria-hidden="true"></i> <h4>Agregar<br> imagen <br> de <br> perfil </h4></a>
			                    </div>
	        	 				<div class="col-md-9">
	        	 					<div class="form-group">
                                        <label class="col-md-5 text-right" for="nombre">Nombre</label>
                                        <%= f.text_field :nombre, :class => "col-md-7" %>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-5 text-right" for="apellido">Apellido</label>
                                        <%= f.text_field :apellido, :class => "col-md-7" %>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-5 text-right" for="email">e-mail</label>
                                        <%= f.text_field :email, :class => "col-md-7" %>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-5 text-right" for="fecha_nac">Fecha de nacimiento</label>
                                        <%= f.date_field :fecha_nac, :class => "col-md-7" %>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-5 text-right" for="ubicacion">Ubicación</label>
                                        <%= f.text_field :ubicacion, :class => "col-md-7" %>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-5 text-right" for="telefono">Teléfono</label>
                                        <%= f.text_field :telefono, :class => "col-md-7" %>
                                    </div>

                                    <div class="form-group">
                                    	<label class="col-md-5 text-right" for="tipo_perfil">¿Eres casero?</label>
                                    	<%= f.check_box_tag :is_casero, :class => "col-md-7" %>
                                    </div>
	        	 				</div>
	        	 			
        	 			</div>
        	 			<div class="row">
        	 				<div class="col-md-4 col-md-offset-8 text-center">
        	 				    	<%= f.submit_tag"¡Crear!", :class => "btn btn-primary btn-lg" %>
        	 				</div>
        	 			</div>
                        <%end%>
        	 		</div>
        	 	</div>
                
             </div>
        </div>

